    "lib": ["es5", "es6", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020"],
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
